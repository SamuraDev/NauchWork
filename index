  <script>
    // Настройка Telegram‑ссылок
    const tgHandle = "superhelp_SH"; // без @
    const tgURL = `https://t.me/${tgHandle}`;
    for (const id of ["tgTop","tgHero","tgBottom","tgFooter"]) {
      const el = document.getElementById(id);
      if (!el) continue;
      el.href = tgURL;
      el.title = "Написать в Telegram @" + tgHandle;
    }
    document.getElementById("year").textContent = new Date().getFullYear();

    // Небольшой «живой» эффект подсветки карточек без WebGL
    const cards = document.querySelectorAll(".card");
    for (const c of cards){
      c.addEventListener("pointermove", (e)=>{
        const r = c.getBoundingClientRect();
        const mx = ((e.clientX - r.left)/r.width)*100;
        const my = ((e.clientY - r.top)/r.height)*100;
        c.style.setProperty("--mx", mx.toFixed(1)+"%");
        c.style.setProperty("--my", my.toFixed(1)+"%");
      });
      c.addEventListener("pointerleave", ()=>{
        c.style.removeProperty("--mx");
        c.style.removeProperty("--my");
      });
    }
  </script>

